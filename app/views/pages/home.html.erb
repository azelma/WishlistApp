<% if @current_user.nil? %>
	<h1>Welcome to the Wishlists App!</h1>
<% else %>
	<h1><%= "Welcome to the Wishlists App, #{@current_user.name}!" %></h1>
	<h3>Wishlists</h3>
	<% if @current_user.contributing_lists.empty? %>
		<p>None.</p>
	<% else %>
		<% @current_user.contributing_lists.each do |wishlist| %>
			<h4><%= link_to wishlist.name, wishlist_path(wishlist.id) %></h4>
		<% end %>
	<% end %>
	<h3>Lists Shared with Me</h3>
	<% if @current_user.commenting_lists.empty? %>
		<p>None.</p>
	<% else %>
		<% @current_user.commenting_lists.each do |wishlist| %>
			<h4><%= link_to wishlist.name, wishlist_path(wishlist.id) %></h4>
		<% end %>
	<% end %>

<% end %>
